                        var Messages = "";
                        if (data.Message != null && data.Message != "" && data.Message != undefined) {
                            Messages += data.Message;
                        }
                        var State = data.Text;
                        layer.alert(Messages, { icon: 1 }, function (index) {
                            if (data.IsContinue == undefined || !data.IsContinue) {
                                layer.close(index);
