@model Bitshare.DataDecision.Model.sys_role
@{
    Layout = "~/Views/Shared/_Operate.cshtml";
    IEnumerable<SelectListItem> DepartList = ViewData["DepartList"] as IEnumerable<SelectListItem>;
}
@using (Html.BeginForm())
{
    <div style="border: 1px solid #CF9E9E; margin: 0px auto; width: 829px">
        <div style="background-color: #E33A3C; width: 100%; height: 10px">
        </div>
        <div class="div_title">
            <label style="margin-left: 10px">
                角色信息-详细</label></div>
        <div>
            <table class="editTable">
                <tr>
                    <td class="lbName">
                        角色名：
                    </td>
                    <td>
                        @Model.role_name
                    </td>
                    <td class="lbName">
                        备注：
                    </td>
                    <td>
                        @Model.role_desc
                    </td>
                </tr>
                <tr>
                    <td colspan="4" align="right">
                        <label style="border: 1px solid #E0E0E0; display: inline-block;">
                            <input type="button" value="取消" id="btnClosePop" class="btn" />
                        </label>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}