
@model Bitshare.DataDecision.Model.UserPassWord
@{
    Layout = "~/Views/Shared/_PageRecord.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div style="border: 1px solid #CF9E9E; margin: 0px auto; width: 829px">
        <div style="background-color: #E33A3C; width: 100%; height: 10px">
        </div>
        <div class="div_title">
            <label style="margin-left: 10px">
                账号设置-修改密码</label></div>
        <div>
            @Html.HiddenFor(model => model.LoginName)
            <table class="editTable">
                <tr>
                    <td class="lbName">
                        <font color='red'>*</font>旧密码
                    </td>
                    <td>
                        @Html.PasswordFor(modelItem => modelItem.OldPassWord)
                    </td>
                </tr>
                <tr>
                    <td class="lbName">
                        <font color='red'>*</font>新密码
                    </td>
                    <td>
                        @Html.PasswordFor(modelItem => modelItem.NewPassWord)
                    </td>
                </tr>
                <tr>
                    <td class="lbName">
                        <font color='red'>*</font>确认密码
                    </td>
                    <td>
                        @Html.PasswordFor(modelItem => modelItem.SureNewPassWord)
                    </td>
                </tr>
                <tr>
                    <td align="right" colspan="2">
                            <input type="submit" value="确认" id="btnSave" class="btn" />
                        &nbsp&nbsp
                            <input type="button" value="取消" id="btnClosePop" class="btn" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
