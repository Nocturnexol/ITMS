@model Bitshare.DataDecision.Model.tblMessage
<style type="text/css">
        .lbName_Message
        {
              border-left: 1px dashed #ccc;
                color: #6c6c6c;
                height: 33px;
                height:40px;
        }
    </style>

@{
    Layout = "~/Views/Shared/_Operate.cshtml";
    ViewBag.Title = "个人消息";
    //tblMessage dpt=ViewBag.MessageModel as tblMessage;
    //IEnumerable<SelectListItem> DepartList = ViewData["DepartList"] as IEnumerable<SelectListItem>;
    Dictionary<string, List<string>> Dic = ViewBag.Dic as Dictionary<string, List<string>>;
}

        <div class="row">
            <div class="col-sm-12">
                <div class="ibox ">
                    <div class="ibox-content">
                    <table class="table table-striped table-bottom" style="margin-top: 10px; margin-bottom: 0px;">
                          
                        <tr>
                            <td class="lbName_Message">
                                <b>发送人:</b>
                            </td>
                            <td>
                                @Model.Sender
                            </td>
                            <td class="lbName_Message">
                                <b>接收人:</b>
                            </td>
                            <td  class="lbName_right"> 
                                @Model.Accepter
                            </td>
                        </tr>
                        <tr>
                            <td class="lbName_Message">
                                <b>消息类型:</b>
                            </td>
                            <td>
                                @Model.MsgType
                            </td>
                            <td class="lbName_Message">
                                <b>消息标题:</b>
                            </td>
                            <td  class="lbName_right"> 
                                @Model.MsgTitle
                            </td>
                        </tr>       
                         <tr>
                            <td class="lbName_Message">
                                <b>发送日期:</b>
                            </td>
                            <td>
                                @(Model.SendDate != null ? Model.SendDate.ToShortDateString() : "")
                            </td>
                            <td class="lbName_Message">
                                <b>接收日期:</b>
                            </td>
                            <td  class="lbName_right"> 
                                 @(Model.AcceptDate != null ? ((DateTime)Model.AcceptDate).ToShortDateString() : "")
                            </td>
                        </tr>    
                        @*<tr >
                            
                            <td class="lbName_Message" >
                                <b>订单号:</b>
                            </td>
                            <td  class="lbName_right" colspan="3"> 
                                 @Model.AdOrderId
                            </td>
                        </tr>    *@
                        <tr style=" height:100px;">
                            <td class="lbName_Message" rowspan="2">
                                <b>消息详情:</b>
                            </td>                          
                            <td  class="lbName_right" colspan="3" rowspan="2"> 
                                 @Model.MsgContent
                            </td>
                        </tr>    
                        <tr></tr>
                    </table>
  </div>
  </div>
  </div>
</div>


