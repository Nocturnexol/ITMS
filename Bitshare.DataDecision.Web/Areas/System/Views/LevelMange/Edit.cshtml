@model Bitshare.DataDecision.Model.tblLevelManange
@{
    ViewBag.Title = "业务上下级信息-编辑";
    Layout = "~/Views/Shared/_OperateNew.cshtml";
    IEnumerable<SelectListItem> UserList = ViewData["UserList"] as IEnumerable<SelectListItem>;
    IEnumerable<SelectListItem> LeaderList = ViewData["LeaderList"] as IEnumerable<SelectListItem>;
}
@Html.HiddenFor(modelItem => modelItem.Rid)
<div class="form-group form-groupm" >
    <label class="col-sm-2 control-label">
        职员<span style="color: #FF9966"> *</span></label>
    <div class="col-sm-4">
        @Html.DropDownList("UserName", UserList, new { @placeholder = "职员", @class = "form-control", @required = "" })
    </div>
    <label class="col-sm-2 control-label">
        直隶上级<span style="color: #FF9966"> *</span></label>
    <div class="col-sm-4">
        @Html.DropDownList("Leader", LeaderList, new { @placeholder = "直隶上级", @class = "form-control", @required = "" })
    </div>
</div>
<div class="form-group form-groupm">
    <label class="col-sm-2 control-label">
        备注</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(modelItem => modelItem.Remark, new { @placeholder = "备注", @class = "form-control" })
    </div>
</div>
