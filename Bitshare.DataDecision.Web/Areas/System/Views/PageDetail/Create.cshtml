@model Bitshare.DataDecision.Model.tblPageDetail
@{
    Layout = "~/Views/Shared/_OperateNew.cshtml";
}
<div class="form-group form-groupm" >
    <label class="col-sm-2 control-label">
        模块名称<span style="color: #FF9966"> *</span></label>
    <div class="col-sm-4">
        @Html.TextBoxFor(modelItem => modelItem.ModelName, new { @placeholder = "模块名称", @class = "form-control", @required = "" })
    </div>
    <label class="col-sm-2 control-label">
        页面名称<span style="color: #FF9966"> *</span></label>
    <div class="col-sm-4">
        @Html.TextBoxFor(modelItem => modelItem.PageName, new { @placeholder = "页面名称", @class = "form-control", @required = "" })
    </div>
</div>
<div class="form-group form-groupm">
    <label class="col-sm-2 control-label">
        明细名称<span style="color: #FF9966"> *</span></label>
    <div class="col-sm-4">
        @Html.TextBoxFor(modelItem => modelItem.DetailName, new { @placeholder = "明细名称", @class = "form-control", @required = "" })
    </div>
    <label class="col-sm-2 control-label">
        备注&nbsp;</label>
    <div class="col-sm-4">
        @Html.TextBoxFor(modelItem => modelItem.Remark, new { @placeholder = "备注", @class = "form-control" })
    </div>
</div>
<script type="text/javascript">
    function OnDataCheck() {
        var ModelName = $("#ModelName").attr("value");
        if (ModelName == undefined || ModelName == null || ModelName.Trim() == "") {
            parent.layer.msg("请填写模块名称!");
            return false;
        }
        var PageName = $("#PageName").attr("value");
        if (PageName == undefined || PageName == null || PageName.Trim() == "") {
            parent.layer.msg("请填写页面名称!");
            return false;
        }
        var DetailName = $("#DetailName").attr("value");
        if (DetailName == undefined || DetailName == null || DetailName.Trim() == "") {
            parent.layer.msg("请填写明细名称!");
            return false;
        }
    }
</script>
